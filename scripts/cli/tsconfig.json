{
  "compilerOptions": {
    "baseUrl": "",
    "paths": {
      "polymesh-typegen/*": ["src/*"],
      "@polkadot/api/augment": ["src/interfaces/augment-api.ts"],
      "@polkadot/types/augment": ["src/interfaces/augment-types.ts"]
    },
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,                      
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "strict": true, 
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src/tests/*", "src/util/*", "src/types.ts"],
  "exclude": ["node_modules", "dist"]
}
